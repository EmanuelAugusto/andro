<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.EditProfile">

    <RelativeLayout
        android:id="@+id/containLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingHorizontal="9dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                android:outlineAmbientShadowColor="#FFFFFF"
                android:progressBackgroundTint="#FFFFFF"
                android:progressTint="#673AB7"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="25dp"
            android:orientation="vertical"
            android:visibility="invisible">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:text="Atualizar Dados"
                android:textColor="#000000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameclient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seu Nome"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:maxLines="1"
                android:inputType="text"/>


            <EditText
                android:id="@+id/email"
                android:hint="Seu E-mail"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"/>

            <EditText
                android:id="@+id/password"
                android:hint="Nova Senha"
                android:textColor="#000000"
                android:layout_marginBottom="15dp"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <EditText
                android:id="@+id/cpf"
                android:hint="Seu Cpf"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:layout_marginBottom="15dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"/>

            <EditText
                android:id="@+id/address"
                android:hint="Seu EndereÃ§o"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:inputType="text"/>
            <LinearLayout
                android:id="@+id/createArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/updateDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#303F9F"
                    android:text="Atualizar Dados"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>